        "table",
        "sofa",
    ]

    for (const model of furniture) {
        const group = await loader.loadAsync(`/model/obj/${model}.obj`);

        group.children.forEach((child) => {
            child.castShadow = true;
            child.receiveShadow = true;
        })

        main.scene.add(group);
    }

