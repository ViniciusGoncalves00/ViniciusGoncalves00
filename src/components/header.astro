---
import { getRelativeLocaleUrl } from 'astro:i18n';
import { getLanguageFromUrl, useTranslations } from '../i18n/utils';
import { Icon } from 'astro-icon/components'

const language = getLanguageFromUrl(Astro.url);
const translation = useTranslations(language);
const locale = Astro.currentLocale ?? "pt-br"
---

<div class="opacity-50 hover:transition-opacity hover:opacity-100 w-full h-full flex-none flex items-center justify-between py-2">
    <nav aria-label="site navigation" class="w-1/4 flex items-center justify-center">
        <ul class="flex">
            <li class="px-4 my-2 flex items-center justify-center cursor-pointer hover:font-medium"><a href={getRelativeLocaleUrl(locale, ``)}>{translation('navigation.home')}</a></li>
            <li class="px-4 my-2 flex items-center justify-center cursor-pointer hover:font-medium"><a href={getRelativeLocaleUrl(locale, `blog`)}>{translation('navigation.blog')}</a></li>
            <li class="px-4 my-2 flex items-center justify-center cursor-pointer hover:font-medium"><a href={getRelativeLocaleUrl(locale, `contact`)}>{translation('navigation.contact')}</a></li>
            <li class="px-4 my-2 flex items-center justify-center cursor-pointer hover:font-medium"><a href={getRelativeLocaleUrl(locale, `404`)}>{translation('navigation.404')}</a></li>
            <li class="px-4 my-2 flex items-center justify-center cursor-pointer hover:font-medium">design</li>
        </ul>
    </nav>
    <div class="w-2/4 flex items-center justify-center">
        <p class="text-3xl font-normal"><strong>portfolio</strong> vinicius gonçalves</p>
    </div>
    <nav aria-label="social networks" class="w-1/4 flex items-center justify-center">
        <ul class="flex">
            <li class="px-4 my-4 flex items-center justify-center space-x-2 cursor-pointer hover:font-medium">
                <Icon name="github" />
                <a target="_blank" href="https://github.com/ViniciusGoncalves00" rel="me">GitHub</a>
            </li>
            <li class="px-4 my-4 flex items-center justify-center space-x-2 cursor-pointer hover:font-medium">
                <Icon name="linkedin" />
                <a target="_blank" href="https://www.linkedin.com/in/viniciusgonçalves00/" rel="me">LinkedIn</a>
            </li>
        </ul>
    </nav>
</div>