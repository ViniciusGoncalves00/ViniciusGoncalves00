---
import HorizontalContainer from './horizontalContainer.astro';
import { Icon } from 'astro-icon/components'
import LanguagePicker from './LanguagePicker.astro';

const year = new Date().getUTCFullYear();
---

<HorizontalContainer>
    <footer class="opacity-50 hover:transition-opacity hover:opacity-100 duration-200 w-full h-16 flex items-center justify-between">
        <div class="w-1/4 h-full flex items-center justify-center">
            <p>Copyright © {year} Vinicius Gonçalves</p>
        </div>
        <div class="w-2/4 h-8 flex items-center justify-center space-x-2">
            <div class="h-full flex items-center justify-between space-x-1">
                <svg class="h-full aspect-square p-1.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.114 5.636a9 9 0 0 1 0 12.728M16.463 8.288a5.25 5.25 0 0 1 0 7.424M6.75 8.25l4.72-4.72a.75.75 0 0 1 1.28.53v15.88a.75.75 0 0 1-1.28.53l-4.72-4.72H4.51c-.88 0-1.704-.507-1.938-1.354A9.009 9.009 0 0 1 2.25 12c0-.83.112-1.633.322-2.396C2.806 8.756 3.63 8.25 4.51 8.25H6.75Z" />
                </svg>
                <button id="toggle-audio-button" aria-label="Toggle dark mode" class="ds-background ds-lower-depth ds-rounded h-full w-14 p-1 cursor-pointer flex items-center">
                    <div id="toggle-audio-knob" class="ds-background ds-high-depth ds-rounded ds-hover h-full aspect-square transition-all transition-discrete duration-500"></div>
                </button>
                <svg class="h-full aspect-square p-1.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 9.75 19.5 12m0 0 2.25 2.25M19.5 12l2.25-2.25M19.5 12l-2.25 2.25m-10.5-6 4.72-4.72a.75.75 0 0 1 1.28.53v15.88a.75.75 0 0 1-1.28.53l-4.72-4.72H4.51c-.88 0-1.704-.507-1.938-1.354A9.009 9.009 0 0 1 2.25 12c0-.83.112-1.633.322-2.396C2.806 8.756 3.63 8.25 4.51 8.25H6.75Z" />
                </svg>
            </div>
            <div class="h-full flex items-center justify-between space-x-1">
                <svg class="h-full aspect-square p-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
                </svg>
                <button id="toggle-theme-button" aria-label="Toggle dark mode" class="ds-background ds-lower-depth ds-rounded h-full w-14 p-1 cursor-pointer flex items-center">
                    <div id="toggle-theme-knob" class="ds-background ds-high-depth ds-rounded ds-hover h-full aspect-square transition-all transition-discrete duration-500"></div>
                </button>
                <svg class="h-full aspect-square p-1.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
                </svg>
            </div>
        </div>
        <nav aria-label="social networks" class="w-1/4 h-full flex items-center justify-center">
            <LanguagePicker />
        </nav>
    </footer>
</HorizontalContainer>

<script>
    const root = document.documentElement;  
    const toggleThemeButton = document.getElementById("toggle-theme-button");
    const toggleThemeKnob = document.getElementById("toggle-theme-knob");
    const toggleAudioButton = document.getElementById("toggle-audio-button");
    const toggleAudioKnob = document.getElementById("toggle-audio-knob");

    let isDark = localStorage.theme === "dark" || (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches);
    let audioEnabled = localStorage.audio === "true" || (!("audio" in localStorage) && !window.matchMedia("(prefers-reduced-motion: reduce)").matches);

    
    isDark ? root.classList.add("dark") : root.classList.remove("dark");
    root.dataset.theme = isDark ? "dark" : "";
    localStorage.theme = isDark ? "dark" : "";

    isDark ? toggleThemeKnob?.classList.add("translate-x-[calc(120%)]") : toggleThemeKnob?.classList.remove("translate-x-[calc(120%)]");
    audioEnabled ? toggleAudioKnob?.classList.add("translate-x-[calc(120%)]") : toggleAudioKnob?.classList.remove("translate-x-[calc(120%)]");

    const enableSFX = new Audio("/sfx/Minimalist1.mp3");
    enableSFX.volume = 1.0;

    const disableSFX = new Audio("/sfx/Minimalist3.mp3");
    disableSFX.volume = 1.0;

    toggleThemeButton?.addEventListener("click", () => {
        isDark = !isDark;

        if (audioEnabled) {
            console.log(audioEnabled)
            isDark ? disableSFX.currentTime = 0 : enableSFX.currentTime = 0;
            isDark ? disableSFX.play() : enableSFX.play();
        }

        isDark ? root.classList.add("dark") : root.classList.remove("dark");
        root.dataset.theme = isDark ? "dark" : "";
        localStorage.theme = isDark ? "dark" : "";

        isDark ? toggleThemeKnob?.classList.add("translate-x-[calc(120%)]") : toggleThemeKnob?.classList.remove("translate-x-[calc(120%)]");
    });

    toggleAudioButton?.addEventListener("click", () => {
        audioEnabled = !audioEnabled;

        audioEnabled ? disableSFX.currentTime = 0 : enableSFX.currentTime = 0;
        audioEnabled ? disableSFX.play() : enableSFX.play();

        localStorage.audio = String(audioEnabled);

        !audioEnabled ? toggleAudioKnob?.classList.add("translate-x-[calc(120%)]") : toggleAudioKnob?.classList.remove("translate-x-[calc(120%)]");
    });

    // function unlockAudio(...audios: HTMLAudioElement[]) {
    //     audios.forEach(audio => {
    //         audio.play().then(() => {
    //             audio.pause();
    //             audio.currentTime = 0;
    //         }).catch(() => {});
    //     });
    // }
    
    // window.addEventListener("pointerdown", () => {
    //     unlockAudio(enableSFX, disableSFX);
    // }, { once: true });
</script>
