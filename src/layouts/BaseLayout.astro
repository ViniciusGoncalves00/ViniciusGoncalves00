---
import "../styles/global.css";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";

import { Translations } from "../i18n/translations.";
import { URLHelper } from "../common/URLhelper";

const { pageName } = Astro.props;

const locale = URLHelper.getLocaleFromURL(Astro.url);
const t = Translations.getTranslation(locale);
---

<html lang={locale}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css"/>
		<link rel="icon" id="favicon" href="/favicon.png" />
		<title>{pageName}</title>
	</head>
	<body class="ds-base w-full h-screen max-h-screen flex-none flex flex-col items-center justify-between">
        <Header />
        <slot name="background"/>
        <main class="w-full h-full overflow-x-hidden overflow-y-auto">
            <slot name="main"/>
        </main>
        <Footer />
	</body>
</html>

<script>
    import { Entry } from "../common/entry";

    document.addEventListener("DOMContentLoaded", () => {
        Entry.initialize();
    });
</script>