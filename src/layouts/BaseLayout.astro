---
import "../styles/global.css";

const { pageName } = Astro.props;
const locale = Astro.currentLocale ?? "pt-br"

import { getLanguageFromUrl, useTranslations } from '../i18n/utils';

const lang = getLanguageFromUrl(Astro.url);
const t = useTranslations(lang);
---

<html lang={locale}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css"/>
		<link rel="icon" id="favicon" href="/favicon.png" />
		<title>{pageName}</title>
	</head>
	<body class="ds-main-text ds-background w-full h-screen max-h-screen flex-none flex flex-col items-center justify-between">
        <slot name="background"/>
        <header class="w-full h-16 shrink-0">
            <slot name="header"/>
        </header>
        <main class="w-full h-full overflow-hidden">
            <slot name="main"/>
        </main>
        <footer class="w-full h-16 shrink-0">
            <slot name="footer"/>
        </footer>
	</body>
</html>