---
import "../styles/global.css";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";

import { Translations } from "../i18n/translations.";
import { URLHelper } from "../common/URLhelper";

const { pageName } = Astro.props;

const locale = URLHelper.getLocaleFromURL(Astro.url);
---

<html lang={locale}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css"/>
		<link rel="icon" id="favicon" href=`${URLHelper.buildPublicPath(["favicon.png"])}` />
		<title>{pageName}</title>
	</head>
	<body class="ds-base w-full h-screen max-h-screen flex-none flex flex-col items-center justify-between">
        <Header />
        <slot name="background"/>
        <main class="w-full h-full overflow-x-hidden overflow-y-auto">
            <slot name="main"/>
        </main>
        <Footer />
	</body>
</html>

<script>
    import { Entry } from "../common/entry";

    document.addEventListener("DOMContentLoaded", () => {
        Entry.initialize();
    });
</script>

<script>
    const state = localStorage.getItem('lightDirection');

    if (state) {
          window.addEventListener("mousemove", (e) => {

          const x = (e.clientX / window.innerWidth - 0.5) * 2;
          const y = (e.clientY / window.innerHeight - 0.5) * 2;    
          const strength = 4;

          document.documentElement.style.setProperty("--light-x", `${x * strength * -1}px`);
          document.documentElement.style.setProperty("--light-y", `${y * strength * -1}px`);
      });
    }
</script>